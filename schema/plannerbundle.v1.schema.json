{
  "$id": "https://hokusei.dev/schema/plannerbundle.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PlannerBundle v1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": { "const": "plannerbundle.v1" },
    "generatedAt": { "type": "string", "format": "date-time" },
    "source": {
      "type": "object",
      "additionalProperties": true
    },
    "projects": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "title": { "type": "string", "minLength": 1 },
          "rationale": { "type": "string" },
          "paths": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "id": { "type": "string", "minLength": 1 },
                "archetype": { "$ref": "https://hokusei.dev/schema/types.common.v1.schema.json#/definitions/Archetype" },
                "nextSliceId": { "type": "string" },
                "slices": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "id": { "type": "string", "minLength": 1 },
                      "title": { "type": "string", "minLength": 1 },
                      "status": { "type": "string", "enum": ["ready", "doing", "blocked", "done"] },
                      "effortDays": { "type": "number", "minimum": 0 },
                      "aimNodeIds": { "type": "array", "items": { "type": "string" } },
                      "beliefEffects": {
                        "type": "array",
                        "items": { "$ref": "https://hokusei.dev/schema/types.common.v1.schema.json#/definitions/BeliefEffect" }
                      },
                      "dependsOn": { "type": "array", "items": { "type": "string" } },
                      "dod": { "type": "array", "minItems": 1, "items": { "type": "string" } },
                      "notes": { "type": "string" },
                      "evidenceMicroIds": { "type": "array", "items": { "type": "string" } },
                      "callouts": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                          "negativeEffects": {
                            "type": "array",
                            "items": { "$ref": "https://hokusei.dev/schema/types.common.v1.schema.json#/definitions/NegativeEffect" }
                          }
                        }
                      }
                    },
                    "required": ["id", "title", "status", "effortDays", "aimNodeIds", "beliefEffects", "dependsOn", "dod"]
                  }
                }
              },
              "required": ["id", "archetype", "slices"]
            }
          }
        },
        "required": ["id", "title", "paths"]
      }
    }
  },
  "required": ["version", "generatedAt", "projects"]
}
