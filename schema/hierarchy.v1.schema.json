{
  "$id": "hierarchy.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AIM Hierarchy v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "pillars"],
  "properties": {
    "version": {
      "type": "string",
      "enum": ["hierarchy.v1", "aimhierarchy.v1"]
    },
    "pillars": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "items": { "$ref": "#/definitions/Pillar" }
    }
  },
  "definitions": {
    "Micro": {
      "type": "object",
      "additionalProperties": true,
      "required": ["id"],
      "properties": {
        "id": { "type": "string" },
        "label": { "type": "string" }
      }
    },
    "Sub": {
      "type": "object",
      "additionalProperties": true,
      "required": ["micros"],
      "properties": {
        "id": { "type": "string" },
        "micros": {
          "type": "array",
          "minItems": 3,
          "maxItems": 3,
          "items": { "$ref": "#/definitions/Micro" }
        }
      }
    },
    "Pillar": {
      "type": "object",
      "additionalProperties": true,
      "required": ["subs"],
      "properties": {
        "id": { "type": "string" },
        "cluster": { "$ref": "./types.common.v1.schema.json#/definitions/Cluster" },
        "subs": {
          "type": "array",
          "minItems": 3,
          "maxItems": 3,
          "items": { "$ref": "#/definitions/Sub" }
        }
      }
    }
  }
}
