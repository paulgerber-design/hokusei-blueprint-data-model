{
  "$id": "https://hokusei.dev/schema/hierarchy.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AIM Hierarchy v1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": { "enum": ["hierarchy.v1", "aimhierarchy.v1"] },
    "pillars": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "subs": {
            "type": "array",
            "minItems": 3,
            "maxItems": 3,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "id": { "type": "string" },
                "label": { "type": "string" },
                "aimId": { "type": "string" },
                "micros": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "object",
                    "additionalProperties": true,
                    "properties": {
                      "id": { "type": "string", "minLength": 1 },
                      "label": { "type": "string" },
                      "belief": { "type": "string" }
                    },
                    "required": ["id"]
                  }
                }
              },
              "required": ["micros"]
            }
          }
        },
        "required": ["subs"]
      }
    }
  },
  "required": ["version", "pillars"]
}
