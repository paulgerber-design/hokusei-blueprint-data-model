{
  "$id": "https://hokusei.dev/schema/types.common.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Hokusei Common Types v1",
  "type": "object",
  "properties": {},
  "additionalProperties": false,
  "definitions": {
    "Id": { "type": "string", "minLength": 1 },
    "NonEmptyString": { "type": "string", "minLength": 1 },
    "Cluster": { "type": "string", "enum": ["TEAM", "REVENUE", "CUSTOMER"] },
    "Archetype": { "type": "string", "enum": ["A_SPEED", "B_UX", "C_ROI"] },
    "Severity": { "type": "string", "enum": ["low", "medium", "high"] },

    "BeliefEffect": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "aimId": { "$ref": "#/definitions/Id" },
        "weight": { "type": "number", "minimum": -1, "maximum": 1 }
      },
      "required": ["aimId", "weight"]
    },

    "NegativeEffect": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "aimId": { "$ref": "#/definitions/Id" },
        "risk": { "$ref": "#/definitions/NonEmptyString" },
        "severity": { "$ref": "#/definitions/Severity" },
        "cluster": { "$ref": "#/definitions/Cluster" },
        "weight": { "type": "number", "minimum": -1, "maximum": 0 }
      },
      "required": ["aimId", "risk", "severity", "cluster", "weight"]
    }
  }
}
